<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>standalone</id>
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>target/libs</directory>
            <includes>
                <include>svnkit-javahl*.jar</include>
                <include>svn-javahl*.jar</include>
            </includes>
            <outputDirectory>svnkit-standalone-${project.version}.${ci.buildNumber}/lib</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.tmatesoft.svnkit:svnkit-cli:*</include>
            </includes>
            <unpack>true</unpack>
            <outputDirectory>svnkit-standalone-${project.version}.${ci.buildNumber}</outputDirectory>
        </dependencySet>
    </dependencySets>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>org.tmatesoft.svnkit:svnkit:*:jar:sources</include>
            </includes>
            <binaries>
                <attachmentClassifier>sources</attachmentClassifier>
                <includeDependencies>true</includeDependencies>
                <unpack>false</unpack>
                <outputDirectory>svnkit-standalone-${project.version}.${ci.buildNumber}/sources</outputDirectory>
            </binaries>

        </moduleSet>
    </moduleSets>



</assembly>